<%= render 'shared/content_title', title: 'Log in' %>

<%= form_tag '/login', class: 'form-inline' do %>
  <div class='form-group'>
    <%= label_tag :username, 'Username:', class: "sr-only" %>
    <%= text_field_tag :username, params[:username] || '', class: "form-control", placeholder: 'Username' %>
  </div>
  <div class='form-group'>
    <%= label_tag :password, 'Password:', class: "sr-only" %>
    <%= password_field_tag :password, params[:password] || '', class: "form-control", placeholder: 'Password' %>
  </div>
  <div class='form-group'>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  </div>
<% end %>