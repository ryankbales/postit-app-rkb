<%= render 'shared/errors', obj: @post %>

<%= form_for @post, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label "Catgories", class:"category-label" %>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label(class:"checkbox-inline") { b.check_box(class: "checkbox-inline adjustment") + b.text } %>
      <% end %>
    </div>
    
  </div>
  <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary') %>
<% end %>