<%= render 'shared/errors', obj: @category %>

<%= form_for @category, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
  	<div class="col-sm-10">
	    <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class: 'btn btn-success') %>
	  </div>
  </div>
<% end %>